<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head'); %>
  </head>
  <body>
    <%- include('./partials/header'); %>
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-4 mx-auto mt-5">
          <div class="card p-5">
            <h3>Sign up</h3>
            <form action="/register" method="POST">
              <label class="mb-2" for="name">Name</label>
              <input class="mb-3 w-100" type="text" name="name">
              <label class="mb-2" for="email">Email</label>
              <input class="mb-3 w-100" type="text" name="email">
              <label class="mb-2" for="password">Password</label>
              <input class="mb-4 w-100" type="text" name="password">
              <button class="btn w-100">Create</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
